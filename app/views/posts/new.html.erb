<h3>スケジュール一新規作成</h3>

<% if flash.now[:failure] %>
    <p class="alert_failure"><%= flash.now[:failure] %></p>
    <%= render "shared/error", obj: @post %>
   <% end %>
<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :startdate ,"開始日" %></th>
      <td><%= f.date_field :startdate %></td>
    </tr>

    <tr>
      <th><%= f.label :enddate ,"終了日" %></th>
      <td><%= f.date_field :enddate %></td>
    </tr>

    <tr>
      <th><%= f.label :allday ,"終日" %></th>
      <td><input name="post[allday]" type="hidden" value="0"><input type="checkbox" value="1" name="post[allday]" id="allday" data-form-type="date">終日の場合はチェックを入れます</td>
    </tr>

    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>

  </table>

  <div>
    <ul>
      <li><%= f.submit "スケジュールを新規登録する"%></li>
      <li><%= link_to "スケジュール情報一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>
</div>

<footer>
  <%= render "shared/partial" %>
</footer>