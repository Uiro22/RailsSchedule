<h3>スケジュール編集</h3>

<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% else flash.now[:failure] %>
  <p class="alert_failure"><%= flash.now[:failure] %></p>
<% end %>
<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :startdate ,"開始日" %></th>
      <td><%= f.text_field :startdate %></td>
    </tr>
    <tr>
      <th><%= f.label :enddate ,"終了日" %></th>
      <td><%= f.text_field :enddate %></td>
    </tr>
    <tr>
      <th><%= f.label :allday ,"終日" %></th>
      <td><%= f.check_box :allday %>終日の場合はチェックを入れます</td>    
    </tr>
    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
      <li><%= link_to "スケジュール情報一覧に戻る", :posts %></li>
    </ul>
  </div>
<% end %>

<footer>
  <%= render "shared/partial" %>
</footer>